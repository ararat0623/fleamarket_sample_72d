.account
  .account__header
    = render 'layouts/header-logo'
  .account__main
    = form_for(@user, url: user_registration_path) do |f|
      = render "devise/shared/error_messages", resource: @user
      .account__main__content
        %h1.account__main__content__head
          会員情報入力
        .account__main__content__form
          %p.title ニックネーム
          %span.require
            必須
          .form
            = f.text_field :nickname, placeholder: "例）フリマ太郎", class: "input-default"
          %p.title メールアドレス
          %span.require
            必須
          .form
            = f.text_field :email, placeholder: "例）PC・携帯どちらでも可", class: "input-default"

          %p.title パスワード
          %span.require
            必須
          .form
            = f.password_field :encrypted_password, placeholder: "例）7文字以上の半角英数字", class: "input-default"
            %p.text ※英字と数字の両方を含めて設定してください

          %h2 本人確認
          %p.note 安心・安全にご利用いただくために、お客様の本人情報の登録にご協力ください。他のお客様に公開されることはありません。

          %p.title お名前（全角）
          %span.require
            必須
          .form-name
            = f.text_field :last_name, placeholder: "例）山田", class: "input-default-half"
            = f.text_field :first_name, placeholder: "例）例太郎", class: "input-default-half"

          %p.title お名前カナ（全角）
          %span.require
            必須
          .form-name
            = f.text_field :last_name_reading, placeholder: "例）ヤマダ", class: "input-default-half"
            = f.text_field :first_name_reading, placeholder: "例）タロウ", class: "input-default-half"

          %p.title 電話番号
          %span.require
            必須
          .form
            = f.text_field :phone_number, class: "input-default"
        
          %p.title 生年月日
          %span.require
            必須
          .form-birthday
            = f.select :birthday, options_for_select(1920..2020), autofocus: 'true', class: 'birth-year'
            年
            = f.select :birthday, options_for_select(1..12), autofocus: 'true', class: 'birth-month'
            月
            = f.select :birthday, options_for_select(1..31), autofocus: 'true', class: 'birth-day'
            日

            .btn__address
              = link_to "住所登録画面へ", addresses_path

  = render "layouts/footer-logo"



