.login-container
  .login-container__header
    = render 'layouts/header-logo'
  .login-container__main
    .login-container__main__panel
      .login-container__main__panel__content
        .login-container__main__panel__content__head
          %p.text
            アカウントをお持ちでない方はこちら
          .form-btn
            = link_to "新規会員登録", new_user_registration_path, class: "btn"
        .login-container__main__panel__content__form
          = form_for(@user, url: user_session_path) do |f|
            %p.title メールアドレス
            .form
              = f.text_field :email, required: true, placeholder: "例）PC・携帯どちらでも可", class: "input-default"

            %p.title パスワード
            .form
              = f.password_field :password, required: true, placeholder: "例）7文字以上の半角英数字", class: "input-default"

            .login-btn
              = f.submit "ログイン", class: "btn"
            

          

  = render "layouts/footer-logo"



