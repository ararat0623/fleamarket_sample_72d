.login-container
  .login-container__header
    = render 'layouts/header-logo'
  .login-container__main
    .login-container__main__panel
      .login-container__main__panel__content
        .login-container__main__panel__content__head
          %p.text
            アカウントをお持ちでない方はこちら
          .form-btn
            = link_to "新規会員登録", '/users/sign_up', class: "btn"
        .login-container__main__panel__content__form
          %p.title メールアドレス
          .form
            = text_field_tag :email, "", placeholder: "例）PC・携帯どちらでも可", class: "input-default"

          %p.title パスワード
          .form
            = password_field_tag :encrypted_password, "", placeholder: "例）7文字以上の半角英数字", class: "input-default"

          .login-btn
            = submit_tag "ログイン", class: "btn"

  = render "layouts/footer-logo"



